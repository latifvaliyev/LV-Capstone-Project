<style>
  .heading-container {
    text-align: center;
    background: white; /* Solid white background */
    color: #2c3e50; /* Dark text color */
    padding: 10px; /* Reduced padding */
    border-radius: 5px; /* Subtle rounded corners */
    margin: 20px auto; /* Center it and add space */
    max-width: 50%; /* Smaller container */
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* Light shadow for depth */
    border: 1px solid #ddd; /* Subtle border for definition */
  }
</style>
<div class="heading-container">
<div style="text-align: center; margin-bottom: 20px;">
  <h1 style="font-family: Arial, sans-serif; color: #2c3e50;">
    Find Compatible Roommates
  </h1>
</div>
</div>
<hr style="border: 1px solid #ddd; margin-bottom: 20px;">

<div style="display: flex; justify-content: center;">
  <div style="width: 60%; background-color: #f9f9f9; padding: 20px; border-radius: 10px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
    <%= form_with url: find_roommates_path, method: :post, local: true do |f| %>
      <div style="margin-bottom: 20px;">
        <label for="city" style="font-weight: bold; font-size: 14px; color: #34495e;">City:</label>
        <%= f.select :city, @cities, prompt: "Select a city", required: true, style: "width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 5px;" %>
      </div>

      <div style="margin-bottom: 20px;">
        <label for="grad_year_range" style="font-weight: bold; font-size: 14px; color: #34495e;">Graduation Year Range:</label>
        <%= f.select :grad_year_range, [["Within 3 Years", 3], ["Within 5 Years", 5]], prompt: "Select a range", required: true, style: "width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 5px;" %>
      </div>

      <div style="text-align: center;">
        <%= f.submit "Find Roommates", style: "padding: 10px 20px; background-color: #2980b9; color: white; border: none; border-radius: 5px; cursor: pointer; font-size: 14px;" %>
      </div>
    <% end %>
  </div>
</div>

<hr style="border: 1px solid #ddd; margin-top: 20px;">
