<div>
  <div>
    <h1>
      List of all universities
    </h1>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>

        <th>
          Image
        </th>

        <th>
          Name
        </th>



        <th>
        </th>
      </tr>

      <% @list_of_universities.each do |a_university| %>
      <tr>

        <td>
          <%= image_tag(a_university.uni_image, alt: a_university.name, width: 100, height: 100) %>
        </td>

        <td>
          <%= a_university.name %>
        </td>

        <td>
          <a href="/universities/<%= a_university.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
