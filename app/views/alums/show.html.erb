<div>
  <div>
    <h1>
      <%= @the_alum.name %>
    </h1>
    <div>
      <% if @the_alum.image.present? %>
        <%= image_tag(@the_alum.image, alt: @the_alum.name, width: 300, height: 300) %>
      <% else %>
        No Image Available
      <% end %>
    </div>
    <div>
      <p><strong>Bio:</strong> <%= @the_alum.bio %></p>
      <p><strong>Email:</strong> <%= mail_to @the_alum.email %></p>
      <p><strong>Graduation Year:</strong> <%= @the_alum.graduation_year&.strftime("%Y") %></p>
      <p><strong>Industry:</strong> <%= @the_alum.industry %></p>
      <p><strong>LinkedIn:</strong>
        <% if @the_alum.linkedin.present? %>
          <%= link_to "Visit LinkedIn Profile", @the_alum.linkedin, target: "_blank", rel: "noopener" %>
        <% else %>
          Not Provided
        <% end %>
      </p>
    </div>
  </div>
</div>

<hr>

<div>
  <h2>Units</h2>
  <% if @the_alum.units.any? %>
    <table border="1">
      <tr>
        <th>City</th>
        <th>Address</th>
        <th>Unit Image</th>
        <th>Unit Bio</th>
      </tr>
      <% @the_alum.units.each do |unit| %>
        <tr>
          <td><%= unit.city %></td>
          <td><%= unit.address %></td>
          <td>
            <% if unit.unit_image.present? %>
              <%= image_tag(unit.unit_image, alt: "Unit Image", width: 100, height: 100) %>
            <% else %>
              No Image
            <% end %>
          </td>
          <td><%= unit.unit_bio %></td>
        </tr>
      <% end %>
    </table>
  <% else %>
    <p>No units have been added by this alum.</p>
  <% end %>
</div>
