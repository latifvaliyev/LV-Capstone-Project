<div>
  <div>
    <h1>
      List of all units
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new unit
    </h2>

    <form action="/insert_unit" method="post">
      <div>
        <label for="city_box">
          City
        </label>

        <input type="text" id="city_box" name="query_city">
      </div>

      <div>
        <label for="alum_id_box">
          Alum
        </label>

        <input type="text" id="alum_id_box" name="query_alum_id">
      </div>

      <div>
        <label for="address_box">
          Address
        </label>

        <input type="text" id="address_box" name="query_address">
      </div>

      <div>
        <label for="unit_image_box">
          Unit image
        </label>

        <input type="text" id="unit_image_box" name="query_unit_image">
      </div>

      <div>
        <label for="unit_bio_box">
          Unit bio
        </label>

        <textarea id="unit_bio_box" name="query_unit_bio" rows="3"></textarea>
      </div>

      <button>
        Create unit
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          City
        </th>

        <th>
          Alum
        </th>

        <th>
          Address
        </th>

        <th>
          Unit image
        </th>

        <th>
          Unit bio
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_units.each do |a_unit| %>
      <tr>
        <td>
          <%= a_unit.id %>
        </td>

        <td>
          <%= a_unit.city %>
        </td>

        <td>
          <%= a_unit.alum_id %>
        </td>

        <td>
          <%= a_unit.address %>
        </td>

        <td>
          <%= a_unit.unit_image %>
        </td>

        <td>
          <%= a_unit.unit_bio %>
        </td>

        <td>
          <%= time_ago_in_words(a_unit.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_unit.updated_at) %> ago
        </td>

        <td>
          <a href="/units/<%= a_unit.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
