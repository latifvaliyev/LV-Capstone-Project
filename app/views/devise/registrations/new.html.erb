<div style="text-align: center; margin-bottom: 20px;">
  <h2 style="font-family: Arial, sans-serif; color: #2c3e50; font-size: 24px;">
    Sign up
  </h2>
</div>

<hr style="border: 1px solid #ddd; margin-bottom: 20px;">

<div style="display: flex; justify-content: center;">
  <div style="width: 60%; background-color: #f9f9f9; padding: 20px; border-radius: 10px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div style="display: flex; flex-direction: column; gap: 20px;">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    label_html: { style: "font-size: 18px; font-weight: bold;" },
                    input_html: { autocomplete: "email", style: "padding: 10px; border: 1px solid #ccc; border-radius: 5px; width: 100%;" } %>

        <%= f.input :name,
                    required: true,
                    label_html: { style: "font-size: 18px; font-weight: bold;" },
                    input_html: { placeholder: "Enter your Full name", style: "padding: 10px; border: 1px solid #ccc; border-radius: 5px; width: 100%;" } %>

        <%= f.input :uni_id,
                    as: :select,
                    collection: [
                      ['Harvard University', 1],
                      ['Stanford University', 2],
                      ['MIT', 3],
                      ['University of Chicago', 4],
                      ['Columbia University', 5],
                      ['Yale University', 6],
                      ['Princeton University', 7],
                      ['University of Pennsylvania', 8],
                      ['California Institute of Technology', 9],
                      ['Duke University', 10],
                      ['Johns Hopkins University', 11],
                      ['Northwestern University', 12],
                      ['University of California, Berkeley', 13],
                      ['University of Michigan', 14],
                      ['Cornell University', 15],
                      ['University of Virginia', 16],
                      ['University of Southern California', 17],
                      ['Carnegie Mellon University', 18],
                      ['New York University', 19],
                      ['University of California, Los Angeles', 20],
                      ['Emory University', 21],
                      ['Georgetown University', 22],
                      ['University of Texas at Austin', 23],
                      ['University of Florida', 24],
                      ['University of Notre Dame', 25],
                      ['Boston University', 26],
                      ['University of Washington', 27],
                      ['Vanderbilt University', 28],
                      ['University of North Carolina at Chapel Hill', 29],
                      ['Brown University', 30],
                      ['Rice University', 31],
                      ['University of Wisconsin-Madison', 32],
                      ['Washington University in St. Louis', 33],
                      ['University of Illinois Urbana-Champaign', 34],
                      ['Georgia Institute of Technology', 35],
                      ['University of Rochester', 36],
                      ['University of Miami', 37],
                      ['Ohio State University', 38],
                      ['University of Maryland', 39],
                      ['University of Minnesota', 40],
                      ['University of Pittsburgh', 41],
                      ['Pennsylvania State University', 42],
                      ['Purdue University', 43],
                      ['University of California, San Diego', 44],
                      ['University of California, Davis', 45],
                      ['University of California, Santa Barbara', 46],
                      ['University of California, Irvine', 47],
                      ['Rutgers University', 48],
                      ['University of Arizona', 49]
                    ],
                    prompt: 'Select your university',
                    required: true,
                    label_html: { style: "font-size: 18px; font-weight: bold;" },
                    input_html: { style: "padding: 10px; border: 1px solid #ccc; border-radius: 5px; width: 100%;" } %>

        <%= f.input :graduation_year,
                    required: true,
                    as: :select,
                    collection: (1950..2030).to_a.reverse,
                    prompt: 'Select your graduation year',
                    label_html: { style: "font-size: 18px; font-weight: bold;" },
                    input_html: { style: "padding: 10px; border: 1px solid #ccc; border-radius: 5px; width: 100%;" } %>

        <%= f.input :industry,
                    required: true,
                    as: :string,
                    label_html: { style: "font-size: 18px; font-weight: bold;" },
                    input_html: { placeholder: "e.g., Finance, Tech, Healthcare", style: "padding: 10px; border: 1px solid #ccc; border-radius: 5px; width: 100%;" } %>

        <%= f.input :linkedin,
                    required: false,
                    label_html: { style: "font-size: 18px; font-weight: bold;" },
                    input_html: { placeholder: "Paste your LinkedIn URL", style: "padding: 10px; border: 1px solid #ccc; border-radius: 5px; width: 100%;" } %>

        <%= f.input :bio,
                    required: false,
                    as: :text,
                    label_html: { style: "font-size: 18px; font-weight: bold;" },
                    input_html: { rows: 3, placeholder: "Write a brief bio (optional)", style: "padding: 10px; border: 1px solid #ccc; border-radius: 5px; width: 100%;" } %>

        <%= f.input :password,
                    required: true,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    label_html: { style: "font-size: 18px; font-weight: bold;" },
                    hint_html: { style: "font-size: 14px; color: #666; margin-top: 5px;" },
                    input_html: { autocomplete: "new-password", style: "padding: 10px; border: 1px solid #ccc; border-radius: 5px; width: 100%;" } %>

        <%= f.input :password_confirmation,
                    required: true,
                    label_html: { style: "font-size: 18px; font-weight: bold;" },
                    input_html: { autocomplete: "new-password", style: "padding: 10px; border: 1px solid #ccc; border-radius: 5px; width: 100%;" } %>
      </div>

      <div style="margin-top: 30px; text-align: center;">
        <%= f.button :submit, "Sign up", style: "padding: 10px 20px; background-color: #2980b9; color: white; border: none; border-radius: 5px; cursor: pointer; font-size: 16px;" %>
      </div>
    <% end %>
  </div>
</div>

<hr style="border: 1px solid #ddd; margin-top: 30px;">

<div style="text-align: center; margin-top: 20px;">
  <%= render "devise/shared/links" %>
</div>
